<body>
  <h1>Register for Volunteer Connection!</h1>
  <br>
  <form class="form-horizontal" action="/users" method="POST">
    <div class="form-group">
      <label class="control-label col-xs-4" for="username">UserName:</label>
      <div class="col-xs-4">
        <input class="form-control" type="text" name="username" autofocus />
      </div>
    </div>
    <br>
    <div class="form-group">
      <label class="control-label col-xs-4" for="password">Password:</label>
      <div class="col-xs-4">
        <input class="form-control" type="password" name="password" />
      </div>
    </div>
    <br>
    <div class="form-group">
      <p>Please select your role:</p>
    <label class="radio-inline"><input type="radio" id="volunteer" name="role" value="volunteer" checked>Volunteer</label>
    
    <label class="radio-inline"><input type="radio" id="teacher" name="role" value="teacher">Teacher</label>
    
  </div>
  <div class="col-sm-offset-4 col-xs-4">
    <input class="btn btn-default form-control" type="submit" value="Create User" />
  </div>
  </form>
